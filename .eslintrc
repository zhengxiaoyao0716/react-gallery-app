{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "no-new-func": "error",
    "prefer-arrow-callback": "error",
    "prefer-template": "error",
    "quotes": [
      "error",
      "single"
    ],
    "semi": "error",
    "eol-last": "error"
  }
}